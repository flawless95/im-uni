{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue",
		"^login-(.*)": "@/components/login-components/login-$1/login-$1.vue",
		"basic-container": "@/components/basic-container/basic-container.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/loginPage/index/index",
			"style": {
				"enablePullDownRefresh": false,
				"navigationStyle": "custom",
				"app-plus": {
					"bounce": "none" // 将回弹属性关掉
				}
			}
		},
		{
			"path": "pages/homePage/userCenter/userCenter",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false,
				"app-plus": {
					"bounce": "none" // 将回弹属性关掉
				}
			}

		}, {
			"path": "pages/homePage/news/news",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/homePage/messge/messge",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/homePage/search/search",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"height": "50px",
		"iconWidth": "20px",
		"borderStyle": "#EBEBEB",
		"backgroundColor": "#FFFFFF",
		// #ifdef APP-PLUS
		"spacing": "-25px",
		// #endif
		"list": [{
			"pagePath": "pages/homePage/news/news",
			"iconPath": "static/icon/home.png",
			"selectedIconPath": "static/icon/homeHL.png",
			"text": ""
		}, {
			"pagePath": "pages/homePage/search/search",
			"iconPath": "static/icon/search.png",
			"selectedIconPath": "static/icon/searchHL.png",
			"text": ""
		}, {
			"pagePath": "pages/homePage/messge/messge",
			"iconPath": "static/icon/message.png",
			"selectedIconPath": "static/icon/messageHL.png",
			"text": ""
		}, {
			"pagePath": "pages/homePage/userCenter/userCenter",
			"iconPath": "static/icon/user.png",
			"selectedIconPath": "static/icon/userHL.png",
			"text": ""
		}]
	}

}
